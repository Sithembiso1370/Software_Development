package task3;

public class SumElements {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		 int[][] by_4_array = new int[3][4];
		 
		by_4_array[0] = task3.Grades.getUserArray(4);
		by_4_array[1] = task3.Grades.getUserArray(4);
		by_4_array[2] = task3.Grades.getUserArray(4);
		
		
		int sum_column1 = by_4_array[0][0] + by_4_array[1][0]+ by_4_array[2][0];
		
		
		int sum_column2 = by_4_array[0][1] + by_4_array[1][1]+ by_4_array[2][1];
		int sum_column3 = by_4_array[0][2] + by_4_array[1][2]+ by_4_array[2][2];
		int sum_column4 = by_4_array[0][3] + by_4_array[1][3]+ by_4_array[2][3];
		
		System.out.println("sum of col1 = "+ sum_column1);
		System.out.println("sum of col2 = "+ sum_column2);
		System.out.println("sum of col3 = "+ sum_column3);
		System.out.println("sum of col4 = "+ sum_column4);
		
	}

}
