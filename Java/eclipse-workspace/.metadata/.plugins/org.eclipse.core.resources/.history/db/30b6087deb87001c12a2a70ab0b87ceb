public class NoDups {

	
//	 TODO : Create a new file called NoDups.java

	public static void main(String[] args) {
		int sample_array[] = {10,20,20,30,30,40,50,50};
		
		int no_duplicate[] = new int[sample_array.length];
		
		
		//sorting array
		Arrays.sort(sample_array);
		
		int length = sample_array.length; 
		length = removeDuplicateElements(sample_array, length);
		int new_array[] = new int[length];
//		TODO 3 : Test your method by calling it from the class main method with an array
//		argument comprising the following elements:

		
//		sample_array = addX(sample_array.length, sample_array, 7);
		
		for(int i = 0; i < length; i++) {
			addX(length, new_array, sample_array[i]) ;
		}
//		
		
		for(int i = 0; i < new_array.length; i++) {
			addX(length, new_array, sample_array[i]) ;
		}


		 
		 
		 
		 


	}
	
//	 TODO 1: Create a method that takes an integer array argument and removes all duplicates from the array

	
	
	
    // Function to add x in arr
    public static int[] addX(int n, int arr[], int x)
    {
        int i;
  
        // create a new array of size n+1
        int newarr[] = new int[n + 1];
  
        // insert the elements from
        // the old array into the new array
        // insert all elements till n
        // then insert x at n+1
        for (i = 0; i < n; i++)
            newarr[i] = arr[i];
  
        newarr[n] = x;
  
        return newarr;
    }
    
    public static int removeDuplicateElements(int arr[], int n){  
        if (n==0 || n==1){  
            return n;  
        }  
        int[] temp = new int[n];  
        int j = 0;  
        for (int i=0; i<n-1; i++){  
            if (arr[i] != arr[i+1]){  
                temp[j++] = arr[i];  
            }  
         }  
        temp[j++] = arr[n-1];     
        // Changing original array  
        for (int i=0; i<j; i++){  
            arr[i] = temp[i];  
        }  
        return j;  
    }  
 

}
