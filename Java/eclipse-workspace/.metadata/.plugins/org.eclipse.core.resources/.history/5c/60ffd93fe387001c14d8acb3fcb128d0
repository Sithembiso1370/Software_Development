package task4;

import java.util.ArrayList;
import java.util.List;

public class NoDups {

	
//	 TODO : Create a new file called NoDups.java

	public static void main(String[] args) {
		int[] sample_array = {20,100,10,80,70,1,0,-1,2,10,15,300,7,6,2,18,19,21,9,0};
		
		System.out.println(sample_array.length);
		removeDuplicateElements(sample_array, sample_array.length);
		
		System.out.println(sample_array.length);


	}
	
//	//   TODO : Create a method that takes an integer array argument and removes all duplicates from the array
	public static int removeDuplicateElements(int arr[], int n){  
        if (n==0 || n==1){  
            return n;  
        }  
        
        
        int[] temp = new int[n];  
        int j = 0;  
        
        for (int i=0; i<n-1; i++){  
            if (arr[i] != arr[i+1]){  
                temp[j++] = arr[i];  
            }  
         }
        
        temp[j++] = arr[n-1];     
        // Changing original array  
        for (int i=0; i<j; i++){  
            arr[i] = temp[i];  
        }  
        return j;  
    }  
 

}
